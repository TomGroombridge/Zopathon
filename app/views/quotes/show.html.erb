<%= form_for Loan.new do |f| %>
	<%= f.label :total %>:
	<%= number_to_currency(@quote.loan_amount) %>
	<%= f.hidden_field :total, :value => @quote.loan_amount %>
	<br>
	<%= f.label :total_repayable %>:
	<%= number_to_currency(@quote.total_amount) %>
	<%= f.hidden_field :total_repayable, :value => @quote.total_amount %>
	<br>
	<%= f.label :monthly_repayments %>:
	<%= number_to_currency(@quote.monthly_repayments) %>
	<%= f.hidden_field :monthly_repayments, :value => @quote.monthly_repayments %>
	<br>
	<%= f.label :monthly_due_date %>:
	<%= @quote.due_date.strftime("%d") %>th of every month
	<%= f.hidden_field :monthly_due_date, :value => @quote.due_date %>
	<br>
	<%= f.label :apr %>:
	<%= number_to_currency(@quote.apr) %>
	<%= f.hidden_field :apr, :value => @quote.apr %>
	<br>

	<%= f.label :offer_apr %>
	<%= f.hidden_field :offer_apr, :value => nil %>
	<br>
	<%= f.submit %>
<% end %>