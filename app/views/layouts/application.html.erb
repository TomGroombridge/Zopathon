<!DOCTYPE html>
<html>
<head>
  <title>Zopathon</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
  <script src="//code.jquery.com/jquery-1.10.2.js"></script>
  <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
</head>
<body>

<ul class="nav nav-tabs">
  <li role="presentation" class="active"><a href="#">Home</a></li>
  <% if signed_in? %>
  	<li role="presentation"><%= link_to("Dashboard".html_safe, user_path(current_user))%></li>
  	<li role="presentation"><%= link_to("Log out".html_safe, destroy_user_session_path, :method => :delete) %></li>
    <li role="presentation" style="float:right"><%= link_to("New Loan", new_quote_path)%></li>
	<% else %>
	  <li role="presentation"><%= link_to("Sign in".html_safe, new_user_session_path) %></li>
	  <li role="presentation"><%= link_to("Sign up".html_safe, new_user_registration_path) %></li>
	<% end %>
</ul>
<%= yield %>

</body>
</html>
