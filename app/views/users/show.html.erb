<div class="loan-details">
	<h1>Borrowing Debts(All Loans)</h1>
	<div class="standard-box">
		<p>You have <%=number_to_currency(current_user.left_to_pay, :unit => "£")%> left to pay!</p>
		<div class="amount_paid_left">
			<div style="display:inline-block; width: 49%; background:#3dfb92; height:100px">
				<div style="display:table; width:100%; height:100%;">
					<p style="vertical-align:middle; height:100%; display:table-cell; text-align:center;"><%= number_to_currency(current_user.amount_paid, :unit => "£")%> - Paid</p>
				</div>
			</div>
			<div style="display:inline-block; width: 49%; background:#ebebeb; height:100px">
				<div style="display:table; width:100%; height:100%;">
					<p style="  vertical-align: middle; height: 100%; display: table-cell; text-align: center;"><%=number_to_currency(current_user.left_to_pay, :unit => "£")%> - Due</p>
				</div>
			</div>
		</div>
		<table class="loan-items" style="margin:auto; top:15px; position:relative; margin-bottom:10px; width:50%;">
      <tbody>
        <tr>
          <th>Monthly Amount</th>
          <td>$250.00</td>
        </tr>
        <tr>
          <th>Repayment Date</th>
          <td>27th of every month</td>
        </tr>
        <tr>
          <th>APR</th>
          <td>10.8%</td>
        </tr>
      </tbody>
    </table>
	</div>
	<h1>Individual loans</h1>
	<div id="accordion">
		<% @loans.each do |loan| %>
	  	<h3><%= loan.id %></h3>
	  	<div>
	  		<div class="standard-box">
					<p>You owe a total of:</p>
					<h2><%= number_to_currency(loan.amount_left, :unit => "£")%></h2>
					<p>You have the option to increase the sie of this loan <%= link_to("Get Cash", edit_loan_path(loan))%></p>
					<div class="amount_paid_left">
						<div style="display:inline-block; width: 49%; background:#3dfb92; height:100px">
							<div style="display:table; width:100%; height:100%;">
								<p style="  vertical-align: middle; height: 100%; display: table-cell; text-align: center;"><%= number_to_currency(loan.amount_paid, :unit => "£")%> - Paid</p>
							</div>
						</div>
						<div style="display:inline-block; width: 49%; background:#ebebeb; height:100px">
							<div style="display:table; width:100%; height:100%;">
								<p style="  vertical-align: middle; height: 100%; display: table-cell; text-align: center;"><%= number_to_currency(loan.amount_left, :unit => "£")%> - Due</p>
							</div>
						</div>
					</div>
					<table class="loan-items" style="margin:auto; margin-top:10px;">
			      <tbody>
			        <tr>
			          <th>Monthly repayments</th>
			          <td><%= number_to_currency(loan.monthly_payments, :unit => "£")%></td>
			        </tr>
			        <tr>
			          <th>Total repayable</th>
			          <td><%= number_to_currency(loan.total_repayable, :unit => "£")%></td>
			        </tr>
			        <tr>
			          <th>Application date</th>
			          <td><%= loan.created_at.strftime("%m/%d/%Y")%></td>
			        </tr>
			        <tr>
			          <th>APR</th>
			          <td><%= loan.apr %>%</td>
			        </tr>
			      </tbody>
			    </table>
			    <%= link_to("View Loan in more detail", loan_path(loan), :style => "margin:auto; display:block; text-align:center; width:200px; margin-top:10px", :class => "btn btn-default")%>
				</div>
		  </div>
		<% end %>
	</div>
</div>

<script>
  $(function() {
    $( "#accordion" ).accordion();
  });
  </script>